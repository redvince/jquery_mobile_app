var timeChanged = function(){
  MAF.messages.store('numbers', [minutes,seconds]);

};
var clock = false;
var mins;// = 2;
var minutes;// = 2;
var seconds;// = 0;
var startClock;
 
// calculate the seconds (don't change this! unless time progresses at a different speed for you...)
var secs;// = 120;
var countdown = function(setMinutes) {
  clock = true;
  secs = setMinutes * 60;
  startClock = setInterval(function(){Decrement();},1000);
  //MAF.messages.store('alphabet', seconds);
};
var Decrement = function() {
  
    if (!clock) {
      clearInterval(startClock);
      MAF.messages.store('numbers', [2,0]);
      return;
    }
    else if (secs === 0) {
      seconds =  '00';
      timeChanged();
      clearInterval(startClock);
      setTimeout(function() {
   MAF.messages.store('numbers', [2,0]);
  MAF.application.loadView("view-HowView");
}, 1000);
      //setTimeout(MAF.messages.store('numbers', [2,0]), 2000);
      //setTimeout(MAF.application.loadView("view-HowView"), 2000);
      //MAF.messages.store('numbers', [2,0]);
      //MAF.application.loadView("view-HowView");
      return;
    }
    else{
      if (secs<10) {
        seconds = '0' + secs;
        console.log(seconds);
      }
  

    // if less than a minute remaining
    else if (secs < 59) {
      seconds = secs;
      console.log(seconds);
    } 
    else {
      minutes = getminutes();

      console.log(minutes);
      seconds = getseconds();
      console.log(seconds);
    }
    timeChanged();
    secs--;
  }
    
    
  
};
function getminutes() {
  // minutes is seconds divided by 60, rounded down
  mins = Math.floor(secs / 60);
  return mins;
}
function getseconds() {
  // take mins remaining (as seconds) away from total seconds remaining
  return secs-Math.round(mins *60);
}
